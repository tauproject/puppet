set -e

if ! test x"${DOCKER_USERNAME}" = x"" ; then
	echo ${DOCKER_PASSWORD} | docker login --username="${DOCKER_USERNAME}" --password-stdin
fi

autoreconf -fi
./configure
make
make check

if ! test x"$DOCKER_USERNAME" = x"" ; then
	make push
fi
